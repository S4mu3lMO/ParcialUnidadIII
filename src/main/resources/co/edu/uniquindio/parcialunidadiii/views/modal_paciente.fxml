<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.parcialunidadiii.controller.ModalPacienteController"
      spacing="15" style="-fx-padding: 25; -fx-background-color: white;"
      prefWidth="500" prefHeight="550">


    <HBox alignment="CENTER" style="-fx-background-color: #3498db; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="Formulario de Paciente" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    </HBox>

    <Separator/>


    <GridPane hgap="15" vgap="15" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>


        <Label text="Tipo de Paciente:" GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
        <ComboBox fx:id="cmbTipo" GridPane.rowIndex="0" GridPane.columnIndex="1"
                  promptText="Seleccione tipo" maxWidth="Infinity"
                  style="-fx-font-size: 13px;"/>


        <Label text="ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
        <TextField fx:id="txtId" GridPane.rowIndex="1" GridPane.columnIndex="1"
                   promptText="Ingrese ID del paciente"
                   style="-fx-font-size: 13px;"/>


        <Label text="Nombre:" GridPane.rowIndex="2" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
        <TextField fx:id="txtNombre" GridPane.rowIndex="2" GridPane.columnIndex="1"
                   promptText="Ingrese nombre completo"
                   style="-fx-font-size: 13px;"/>


        <Separator GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

        <Label text="Datos de Enfermedad" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>


        <Label text="Enfermedad:" GridPane.rowIndex="5" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
        <TextField fx:id="txtNombreEnfermedad" GridPane.rowIndex="5" GridPane.columnIndex="1"
                   promptText="Nombre de la enfermedad (opcional)"
                   style="-fx-font-size: 13px;"/>


        <Label text="Gravedad:" GridPane.rowIndex="6" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
        <ComboBox fx:id="cmbGravedad" GridPane.rowIndex="6" GridPane.columnIndex="1"
                  promptText="Seleccione gravedad" maxWidth="Infinity"
                  style="-fx-font-size: 13px;"/>


        <Separator GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2"/>


        <Label text="Estado Laboral:" GridPane.rowIndex="8" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
        <CheckBox fx:id="chkJubilado" text="Â¿EstÃ¡ jubilado?" GridPane.rowIndex="8" GridPane.columnIndex="1"
                  style="-fx-font-size: 13px;"/>
    </GridPane>


    <Separator/>

    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="btnGuardar" text="ðŸ’¾ Guardar" onAction="#onGuardar"
                prefWidth="140" prefHeight="35"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;">
            <cursor>
                <javafx.scene.Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

        <Button fx:id="btnCancelar" text="âŒ Cancelar" onAction="#onCancelar"
                prefWidth="140" prefHeight="35"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;">
            <cursor>
                <javafx.scene.Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </HBox>

</VBox>