<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="co.edu.uniquindio.parcialunidadiii.controller.ModalMedicoController"
          hgap="10" vgap="10" style="-fx-padding: 20;">

    <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Especialidad:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ComboBox fx:id="cmbEspecialidad" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button text="Guardar" onAction="#onGuardar" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Button text="Cancelar" onAction="#onCancelar" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

</GridPane>
