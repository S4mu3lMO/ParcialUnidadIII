<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.parcialunidadiii.controller.DashboardController"
            prefHeight="600.0" prefWidth="900.0">


    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                <Label text="Sistema de Gestión Clínica" textFill="white">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
            </HBox>


            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10; -fx-background-color: #34495e;">
                <Button text="Pacientes" onAction="#abrirPacientes"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"
                        prefWidth="150">
                    <cursor>
                        <javafx.scene.Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>

                <Button text="Médicos" onAction="#abrirMedicos"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"
                        prefWidth="150">
                    <cursor>
                        <javafx.scene.Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>

                <Button text="Citas" onAction="#abrirCitas"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"
                        prefWidth="150">
                    <cursor>
                        <javafx.scene.Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </HBox>
        </VBox>
    </top>


    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #ecf0f1;">
            <VBox alignment="CENTER" spacing="20">
                <Label text="Bienvenido al Sistema de Gestión Clínica" style="-fx-font-size: 22px; -fx-text-fill: #2c3e50;"/>
                <Label text="Seleccione una opción del menú superior" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
            </VBox>
        </StackPane>
    </center>


    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label text="© 2025 Clínica - Sistema de Gestión" textFill="white" style="-fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>