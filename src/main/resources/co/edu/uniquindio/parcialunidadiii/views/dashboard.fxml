<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.parcialunidadiii.controller.DashboardController"
            stylesheets="@../css/style.css">

    <!-- ========== SIDEBAR IZQUIERDO ========== -->
    <left>
        <VBox fx:id="sidebar"
              spacing="20"
              prefWidth="230"
              style="-fx-background-color: #2c3e50; -fx-padding: 30;">

            <!-- TÍTULO -->
            <Label text="CLÍNICA UQ"
                   style="-fx-text-fill: white;
                          -fx-font-size: 26px;
                          -fx-font-weight: bold;
                          -fx-padding: 0 0 20 0;" />

            <!-- BOTONES DEL MENÚ -->
            <Button text="Pacientes"
                    onAction="#abrirPacientes"
                    prefHeight="45"
                    style="-fx-background-color: #34495e;
                           -fx-background-radius: 8;
                           -fx-text-fill: white;
                           -fx-font-size: 15px;" />

            <Button text="Médicos"
                    onAction="#abrirMedicos"
                    prefHeight="45"
                    style="-fx-background-color: #34495e;
                           -fx-background-radius: 8;
                           -fx-text-fill: white;
                           -fx-font-size: 15px;" />

            <Button text="Citas"
                    onAction="#abrirCitas"
                    prefHeight="45"
                    style="-fx-background-color: #34495e;
                           -fx-background-radius: 8;
                           -fx-text-fill: white;
                           -fx-font-size: 15px;" />

        </VBox>
    </left>

    <!-- ========== PANEL DE CONTENIDO DINÁMICO ========== -->
    <center>
        <StackPane fx:id="contentPane"
                   style="-fx-background-color: #ecf0f1;" />
    </center>

</BorderPane>
