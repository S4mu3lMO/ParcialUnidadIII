<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.parcialunidadiii.controller.PacientesController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: white;">


    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="GestiÃ³n de Pacientes" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>


        <Button text="âž• Agregar Paciente" onAction="#agregarPaciente"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-background-radius: 5;">
            <cursor>
                <javafx.scene.Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

        <Button text="âœï¸ Editar" onAction="#editarPaciente"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-background-radius: 5;">
            <cursor>
                <javafx.scene.Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

        <Button text="ðŸ—‘ï¸ Eliminar" onAction="#eliminarPaciente"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15; -fx-background-radius: 5;">
            <cursor>
                <javafx.scene.Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </HBox>

    <Separator/>


    <TableView fx:id="tablaPacientes" VBox.vgrow="ALWAYS"
               style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5;">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="100" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
            <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="colEnfermedad" text="Enfermedad" prefWidth="180"/>
            <TableColumn fx:id="colGravedad" text="Gravedad" prefWidth="120" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="colJubilado" text="Jubilado" prefWidth="100" style="-fx-alignment: CENTER;"/>
        </columns>

        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>


    <HBox alignment="CENTER_LEFT" style="-fx-padding: 5;">
        <Label text="Total de pacientes: " style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
        <Label fx:id="lblTotal" text="0" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>

</VBox>