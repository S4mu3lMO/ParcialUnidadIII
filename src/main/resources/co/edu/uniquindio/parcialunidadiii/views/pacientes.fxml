<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>

<VBox spacing="20"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.parcialunidadiii.controller.PacientesController"
      style="-fx-padding: 30; -fx-background-color: #ecf0f1;">

    <!-- TÍTULO -->
    <Label text="Gestión de Pacientes"
           style="-fx-font-size: 26px;
                  -fx-font-weight: bold;
                  -fx-text-fill: #2c3e50;" />

    <!-- TABLA -->
    <TableView fx:id="tablaPacientes"
               prefHeight="420"
               style="-fx-background-radius: 10;
                      -fx-border-radius: 10;
                      -fx-background-color: white;
                      -fx-border-color: #bdc3c7;">

        <columns>
            <TableColumn text="ID" fx:id="colId" prefWidth="120"/>
            <TableColumn text="Nombre" fx:id="colNombre" prefWidth="220"/>
            <TableColumn text="Enfermedad" fx:id="colEnfermedad" prefWidth="220"/>
        </columns>

    </TableView>

    <!-- BOTÓN PRINCIPAL -->
    <Button text="Agregar Paciente"
            onAction="#agregarPaciente"
            prefHeight="45"
            prefWidth="200"
            style="-fx-background-color: #34495e;
                   -fx-text-fill: white;
                   -fx-font-size: 15px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 10;" />

</VBox>
