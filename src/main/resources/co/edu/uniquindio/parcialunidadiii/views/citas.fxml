<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.parcialunidadiii.controller.CitasController"
      style="-fx-padding: 25; -fx-background-color: #f7f7f7;">

    <Label text="Gestión de Citas"
           style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <TableView fx:id="tablaCitas"
               prefHeight="450"
               style="-fx-background-color: white; -fx-border-color: #dcdcdc; -fx-border-radius: 8; -fx-background-radius: 8;">
        <columns>
            <TableColumn text="Paciente" fx:id="colPaciente" prefWidth="170"/>
            <TableColumn text="Médico" fx:id="colMedico" prefWidth="170"/>
            <TableColumn text="Fecha" fx:id="colFecha" prefWidth="150"/>
            <TableColumn text="Hora" fx:id="colHora" prefWidth="120"/>
            <TableColumn text="Precio" fx:id="colPrecio" prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Botón con estilo oscuro igual que Médicos y Pacientes -->
    <Button text="Crear Cita"
            onAction="#crearCita"
            styleClass="button-dark"/>
</VBox>
